<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        style="@style/titlebarStyle"
        android:text="常用工具类"/>

    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_address_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="green"
        mo:sivTitle="号码归属地查询"
        mo:sivToggle="false"
        />
    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_normal_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="purple"
        mo:sivTitle="常用号码查询"
        mo:sivToggle="false"
        />
    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_sms_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="purple"
        mo:sivTitle="短信备份"
        mo:sivToggle="false"
        />
    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_sms_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="purple"
        mo:sivTitle="短信还原"
        mo:sivToggle="false"
        />
    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_appsocke_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="purple"
        mo:sivTitle="程序锁管理"
        mo:sivToggle="false"
        />
    <mo.com.phonesafe.view.SettingItemView
        android:id="@+id/si_open_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        mo:sivBackground="purple"
        mo:sivTitle="开启电子狗服务"
        mo:sivToggle="false"
        />

</LinearLayout>
