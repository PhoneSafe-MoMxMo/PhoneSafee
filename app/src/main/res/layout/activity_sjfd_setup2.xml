<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/settingTitlebarStyle"
        android:text="2.手机卡绑定" />

    <!--textView功能文本介绍-->
    <TextView
        style="@style/SetupTextViewStyle"
        android:text="通过绑定手机卡：\n下次手机重启时SIM卡发生变化,就会发送警报短信" />

    <RelativeLayout
        android:id="@+id/setup2_rl_bind"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/btn_primary_selector">
        <TextView
            android:padding="4dp"
            android:layout_marginTop="20dp"
            style="@style/SetupTextViewStyle"
            android:textColor="@android:color/white"
            android:text="点击绑定/解绑SIM卡"/>

        <ImageView
            android:id="@+id/setup_bing_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unlock"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--中间图片-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/hm"
           />
        <!--上一步按钮  -->
        <Button
            style="@style/PreBtnStyle"
            android:text="上一步" />

        <!--下一步按钮-->
        <Button
            style="@style/NextBtnStyle"
            android:text="下一步" />


        <!--点-->
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_normal"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_selected"/>

            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_normal"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_normal"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_normal"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>