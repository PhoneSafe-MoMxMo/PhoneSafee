<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_home_selector"
    >
    <ImageView
        android:id="@+id/iv_home_item_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/qh"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_home_item_icon">

        <TextView
            android:id="@+id/tv_home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:text="zzzz"/>
        <TextView
            android:id="@+id/tv_home_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="15sp"
            android:text="zzzz"/>

    </LinearLayout>

</RelativeLayout>