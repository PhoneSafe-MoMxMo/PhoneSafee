<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/iv_clean_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:padding="3dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/mo"/>

    <LinearLayout
        android:layout_toRightOf="@+id/iv_clean_item_icon"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_title"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="应用程序"/>

        <TextView
            android:id="@+id/tv_item_cachesize"
            android:textSize="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/normalblue_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="缓存大小"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_clean"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_width="36dp"
        android:visibility="gone"
        android:layout_height="36dp"
        android:src="@drawable/list_clean_cache_seletor"/>




</RelativeLayout>